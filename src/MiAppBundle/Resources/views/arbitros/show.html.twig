{% extends 'MiAppBundle::Default/index.html.twig' %}

{% block editor %}
    <h1>Arbitros</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ arbitro.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ arbitro.nombre }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ arbitro.edad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('arbitros_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('arbitros_edit', { 'id': arbitro.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
